@model Geo4Students.ViewModels.KlimatogramViewModel

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>

<div class="form-horizontal">
    <div id="klimatogramDropDowns">
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                @Html.Partial("../Klimatogram/_ContinentenDropDown", Model)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <div id="LandenDropDown">
                    @Html.Partial("../Klimatogram/_LandenDropDown", Model)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <div id="KlimatogrammenDropDown">
                    @Html.Partial("../Klimatogram/_KlimatogrammenDropDown", Model)
                </div>
            </div>
        </div>
    </div>
    <br/>

    <div class="form-group">
        <div id="KlimatogramChart" class="col-md-12"></div>
    </div>
</div>