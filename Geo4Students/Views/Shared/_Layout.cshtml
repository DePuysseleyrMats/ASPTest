@{
    var jaar = 0;
    if (HttpContext.Current.Request["jaar"] != null)
    {
        var jaarString = HttpContext.Current.Request["jaar"];
        if (!jaarString.Equals(""))
        {
            jaar = int.Parse(jaarString);
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>@("Geo4Students - " + ViewBag.Title)</title>
    <link rel="shortcut icon" href="~/Assets/Images/Geo4StudentsLogo.ico" type="images/x-icon"/>
    <meta name="generator" content="Bootply"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome.css" rel="stylesheet"/>
    <!--[if lt IE 9]>
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link href="~/Content/styles.css" rel="stylesheet">
</head>
<body>
<br/>
<br/>

    <div class="align-center left" id="navDiv">
        <div id="slideButton">
            <i class="fa fa-caret-square-o-left fa-2x extremeHover orangeIcon"></i>
        </div>
        <div id="veranderJaarIcon">
            <a href='@Url.Action("Jaar", "Home")' id="veranderJaar">
                <i class="fa fa-2x fa-exchange extremeHover orangeIcon"></i>
            </a>
        </div>

        <!-- left -->
        <a href='@Url.Action("Index", "Home")'>
            <img src='@Url.Content("~/Assets/Images/Geo4Students.png")' />
        </a>
        <h3 id="boodschap" class="text-center">
            Welkom @{
                @jaar<sup>@(jaar == 1 ? "ste" : "de")</sup>
            } jaars student
        </h3>

        <ul class="nav nav-stacked" id="mainpanel">
            <li>
                <a href="/EersteGraad/Index" class="noHover">
                    <i class="fa fa-file-text-o fa-4x greenIcon extremeHover"></i>
                    <p align="center" style="padding-top: 5px;">
                        Oefening 1<sup>ste</sup> Graad
                    </p>
                </a>
            </li>
            @if (jaar > 2)
            {
                <li>
                    <a href="/TweedeGraad/Index" class="noHover">
                        <i class="fa fa-sitemap fa-4x yellowIcon extremeHover"></i>
                        <p align="center" style="padding-top: 5px;">
                            Oefening 2<sup>de</sup> Graad
                        </p>
                    </a>

                </li>
            }
            @if (jaar > 4)
            {
                <li>
                    <a href="/DerdeGraad/Index" class="noHover">
                        <i class="fa fa-globe fa-4x purpleIcon extremeHover"></i>
                        <p align="center" style="padding-top: 5px;">
                            Oefening 3<sup>de</sup> Graad
                        </p>
                    </a>
                </li>
            }
        </ul>
    </div>

<div class="container">
    <div>
        @RenderBody()
    </div>
</div>

